; drummer (thor magnusson)
(let* ((tempo 4)
       (n (white-noise ar))
       (t1 (impulse ar tempo 0))
       (t2 (pulse-divider t1 4 2))
       (t4 (pulse-divider t1 4 0))
       (snare (mul n (decay2 t2 0.005 0.5)))
       (bass (mul (sin-osc ar 60 0) (decay2 t4 0.005 0.5)))
       (hihat (mul (hpf n 10000) (decay2 t1 0.005 0.5))))
  (pan2 (sum3 snare bass hihat) 0 0.4))
