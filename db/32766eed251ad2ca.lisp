; pv-rand-wipe
(let* ((n 6)
       (a (mix-fill n (lambda (_) (mul (lf-saw ar (exp-rand 400.0 1000.0) 0.0) 0.1))))
       (b (mix-fill n (lambda (_) (mul (lf-pulse ar (exp-rand 80.0 400.0) 0.0 0.2)
                                       (u:max (mul (sin-osc kr (rand 0.0 8.0) 0.0) 0.2) 0.0)))))
       (f (fft* (local-buf 1 2048) a))
       (g (fft* (local-buf 1 2048) b))
       (y (mouse-y kr 0 1 0 0.1))
       (x (mouse-x kr 0 1 0 0.1))
       (h (pv-rand-wipe f g x (gt y 0.5)))
       (i (ifft* h)))
  (mul 0.5 (mce2 i i)))
